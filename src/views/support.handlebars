<header class="top-bar-support">
    <a href="/">
        <div class="top-bar-left-support">
            <div class="logo-support">
                <img src="../images/logo.png" alt="Logo Sper" width="60" height="60">
            </div>
            <div class="title-support">
                <h1>SPER</h1>
            </div>
        </div>
    </a>
</header>




<main>

    <br>

    <div class="support-title">
        <h1>Soporte</h1>
        <p>Complete el siguiente formulario para recibir ayuda</p>
    </div>

    <br>

    <section>
        <form action="/api/support" method="POST">
            <div class="mb-32">
                <label for="exampleName" class="form-support">Nombre y apellido</label>
                <input type="text" class="form-control" id="exampleName" name="name" required title=""
                    placeholder="Nombre y apellido del solicitante">
            </div>
            <div class="mb-32">
                <label for="exampleEmail" class="form-support">Email</label>
                <input type="email" class="form-control" id="exampleEmail" name="email" required
                    placeholder="Dirección de email del solicitante">
            </div>
            <div class="mb-32">
                <label for="phone" class="form-support">Número de teléfono</label>
                <input type="tel" class="form-control" id="phone" name="phone" required pattern="\d{10}"
                    title="Ingresa tu número de 10 dígitos sin espacios ni guiones (ej: 3435201155)"
                    placeholder="Numero de telefono del solicitante">
            </div>
            <div class="mb-32">
                <label for="exampleDescription" class="form-support">Descripción del Problema</label>
                <textarea class="form-control" id="exampleDescription" name="description" required
                    placeholder="Escriba detalladamente su problema acá" rows="4"></textarea>
            </div>
            <div class="mb-32">
                <label for="exampleFile" class="form-support">Capturas de pantalla del problema</label>
                <input type="file" class="form-control" id="exampleFile" name="file" multiple
                    placeholder="Inserte sus archivos mostrando el problema acá" accept="image/*">
                <br>
            </div>


            <div class="form-buttons-container">
                <button class="btn-submit" type="submit">Enviar datos</button>
                <button class="btn-submit" type="reset">Limpiar campos</button>
            </div>
        </form>
    </section>


</main>

<footer class="footer-bar">
    <p>© 2025 SPER - Departamento de Seguridad Informática</p>
</footer>