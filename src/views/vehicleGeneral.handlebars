{{>navBar}}

<main>
    <div class="titulo-products">
        <h1>Flota de Vehículos</h1>
    </div>

    <form class="filter-container" action="/vehicle/filtrar" method="GET">
        <div class="filter-group">
            <label for="dominio">Dominio:</label>
            <input type="text" id="dominio" name="dominio">
        </div>
        <div class="filter-group">
            <label for="modelo">Modelo:</label>
            <input type="text" id="modelo" name="modelo">
        </div>
        <div class="filter-group">
            <label for="destino">Destino:</label>
            <input type="text" id="destino" name="destino">
        </div>
        <div class="filter-group">
            <label for="marca">Marca:</label>
            <input type="text" id="marca" name="marca">
        </div>
        <div class="filter-group">
            <label for="año">Año:</label>
            <input type="text" id="año" name="año">
        </div>
        <div class="filter-group">
            <label for="tipo">Tipo:</label>
            <input type="text" id="tipo" name="tipo">
        </div>
        
        <div class="filter-buttons">
            <button type="submit" class="btn btn-primary">Filtrar</button>
            <a href="/vehiclegeneral" class="btn btn-secondary">Limpiar</a>
        </div>
    </form>

    <div class="vehicle-grid">
        {{#each docs}}
        <a href="/{{this._id}}" class="vehicle-card">
            <img src="/uploads/{{this.thumbnail.[0]}}" alt="{{this.marca}} {{this.modelo}}">
            <div class="vehicle-card-info">
                <h3>{{this.title}}</h3>
                <p>{{this.dominio}}</p>
            </div>
        </a>
        {{/each}}
    </div>
</main>

<div class="downbar">
    <footer class="footer-bar-vehicle-general">
        <p>© 2025 SPER - Departamento de Seguridad Informática</p>
    </footer>
</div>