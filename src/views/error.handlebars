{{! src/views/error.handlebars }}
<style>
    body { font-family: sans-serif; text-align: center; padding: 40px; background-color: #f8f9fa; }
    .error-container { max-width: 600px; margin: 0 auto; border: 1px solid #ddd; padding: 30px; border-radius: 8px; background-color: #fff; box-shadow: 0 4px 8px rgba(0,0,0,0.05); }
    h1 { color: #d9534f; }
</style>

<div class="error-container">
    <h1>Ocurrió un Error en el Servidor</h1>
    <p>Lo sentimos, no pudimos completar tu solicitud en este momento.</p>
    
    {{#if message}}
        <p><strong>Detalle:</strong> {{message}}</p>
    {{/if}}
    
    <br>
    <a href="javascript:history.back()">Volver a la página anterior</a>
</div>